@model IEnumerable<Game>

@{
    ViewData["Title"] = "List of Games";
}

<div class="row">
    @foreach (var game in Model)
    {
        <div class="col-md-4 col-xs-6 border-primary mb-3">
            <div class="card mb-3" style="max-width: 540px;">
                <div class="row g-0">
                    <div class="col-md-12">
                        <div class="card-header text-white bg-info">
                            <p class="card-text">
                                <h5 class="card-title">
                                    @game.Name
                                    <a class="text-white float-end"><i class="bi bi-pencil-square"></i></a>
                                </h5>
                            </p>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <img src="@game.ImageURL" width="100%" alt="@game.Name">
                    </div>
                    <div class="col-md-6">
                        <div class="card-body">
                            <p class="card-text">@game.Description</p>
                            <p class="card-text"><b>Platform: </b>@game.Platform.Name</p>
                            <p class="card-text"><b>Category: </b>@game.Category</p>
                            <p class="card-text"><b>Release Date: </b>@game.ReleaseDate.ToString("dd MMM yyyy")</p>
                            <p class="card-text">
                                <b>Status: </b>
                                @if (DateTime.Now >= game.ReleaseDate)
                                {
                                    <span class="badge bg-success text-white">AVAILABLE</span>
                                }
                                else
                                {
                                    <span class="badge bg-primary text-white">UPCOMING</span>
                                }
                            </p>
                        </div>
                    </div>
                    <div class="col-md-12">
                        <div class="card-footer ">
                            <p class="card-text">
                                <a class="btn btn-outline-primary float-end"><i class="bi bi-eye-fill"></i> Show Details</a>
                                <a class="btn btn-success text-white"><i class="bi bi-cart-plus"></i> Add to Cart (Price @game.Price.ToString("c"))</a>
                            </p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }
</div>