@model IEnumerable<Developer>

@{
    ViewData["Title"] = "List of Developers";
}

<div class="row">
    <div class="col-md-8 offset-md-2">
        <table class="table">
            <thead>
                <tr>
                    <th>@Html.DisplayNameFor(model => model.ProfilePictureURL)</th>
                    <th>@Html.DisplayNameFor(model => model.FullName)</th>
                    <th>@Html.DisplayNameFor(model => model.Biography)</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td class="align-middle">
                            <img src="@item.ProfilePictureURL" style="max-width:150px" />
                        </td>
                        <td class="align-middle">
                            @item.FullName                        
                        </td>
                        <td class="align-middle">
                            @item.Biography
                        </td>
                        <td class="align-middle">
                            <a class="btn btn-outline-primary"><i class="bi bi-pencil-square"></i> Edit</a> |
                            <a class="btn btn-outline-info"><i class="bi bi-eye"></i> Details</a> |
                            <a class="btn btn-danger"><i class="bi bi-trash"></i> Delete</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>