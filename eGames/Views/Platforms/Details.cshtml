@model Platform

@{
    ViewData["Title"] = Model.Name + " Details";
}

<div class="row text">
    <div class="col-md-8 mx-auto">
        <p>
            <h1>Details for @Model.Name</h1>
        </p>
        <div class="row" style="margin-top:35px">
            <div class="col-md-8 mx-auto">
                <div class="form-group text-center">
                    <img id="LogoPreview" style="max-width:300px; max-height:300px; border: 1px solid #ddd; border-radius: 10px; padding: 5px; box-shadow: 0 0 10px #ddd;" />
                </div>
                <div class="form-group">
                    <label asp-for="Logo" class="form-label"></label>
                    <input asp-for="Logo" class="form-control" readonly />
                </div>
                <div class="form-group">
                    <label asp-for="Name" class="form-label"></label>
                    <input asp-for="Name" class="form-control" readonly />
                </div>
                <div class="form-group">
                    <label asp-for="URL" class="form-label"></label>
                    <input asp-for="URL" class="form-control" readonly />
                </div>
                <div class="form-group">
                    <label asp-for="Description" class="form-label"></label>
                    <input asp-for="Description" class="form-control" readonly />
                </div>
                <div class="form-group" style="margin-top:10px">
                    @if (User.Identity.IsAuthenticated && User.IsInRole("Admin"))
                    {
                        <a class="btn btn-outline-primary float-end" asp-action="Edit" asp-route-id="@Model.Id">Edit</a>
                    }
                    <a class="btn btn-outline-secondary" asp-action="Index">Show All</a>
                </div>
            </div>
        </div>
    </div>
</div>


@section Scripts{
    <script>
        $(document).ready(function () {
            var preview = document.getElementById('LogoPreview');
            preview.src = $("#Logo").val();
        })
    </script>
}